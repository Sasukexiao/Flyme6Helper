<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.coderstory.fuckbugme.MainActivity">

    <TextView
        android:text="FuckBugMe是一款针对flyme系统的主题和谐插件,适用于flyme6系统.实现主题的无限试用且不会恢复"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp" />

    <TextView
        android:text="使用说明:\n\n插件的正常运行需要root权限，用户禁用主题美化的一些功能防止主题自动恢复.\n\n当前支持的主题美化版本：6.0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <Button
        android:text="授权Root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:id="@+id/button"
        android:onClick="checkroot"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="当前Root授权状态:尚未获取"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rootStatus"
        android:textColor="#1f93ce"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:text="Power by Coderstory  © 2017 blog.coderstory.cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:id="@+id/textView4" />

</RelativeLayout>
